*.icns filter=lfs diff=lfs merge=lfs -text

# App store assets
*.appicon filter=lfs diff=lfs merge=lfs -text
*.ttf filter=lfs diff=lfs merge=lfs -text
*.otf filter=lfs diff=lfs merge=lfs -text